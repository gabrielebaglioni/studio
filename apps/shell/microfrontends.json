{
  "$schema": "https://turborepo.com/microfrontends/schema.json",
  "options": {
    "localProxyPort": 3024
  },
  "applications": {
    "shell": {
      "packageName": "@qia/shell",
      "development": {
        "local": {
          "port": 3000
        }
      }
    },
    "details": {
      "packageName": "@qia/details",
      "development": {
        "local": {
          "port": 3001
        },
        "fallback": "https://details-yourteam.vercel.app"
      },
      "routing": [
        {
          "paths": ["/projects", "/projects/:path*"]
        }
      ]
    },
    "checkout": {
      "packageName": "@qia/checkout",
      "development": {
        "local": {
          "port": 3002
        },
        "fallback": "https://checkout-yourteam.vercel.app"
      },
      "routing": [
        {
          "paths": ["/support", "/support/:path*"]
        }
      ]
    }
  }
}

