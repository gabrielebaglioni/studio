{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["TURBO_MFE_PORT", "NEXT_PUBLIC_DEV_MODE"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["TURBO_MFE_PORT"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    }
  }
}

