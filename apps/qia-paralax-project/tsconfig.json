{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/core/*": [
        "../core/*"
      ]
    },
    "types": [
      "astro/client"
    ],
    // Removed Next.js plugin - using Astro now
  },
    "include": [
    "astro.config.mjs",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
