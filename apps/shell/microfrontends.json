{
  "$schema": "https://turborepo.com/microfrontends/schema.json",
  "options": {
    "localProxyPort": 3024
  },
  "applications": {
    "shell": {
      "packageName": "@qia/shell",
      "development": {
        "local": {
          "port": 3000
        }
      }
    },
    "core": {
      "packageName": "@qia/core",
      "development": {
        "local": {
          "port": 3001
        },
        "fallback": "https://core-yourteam.vercel.app"
      },
      "routing": [
        {
          "paths": ["/core", "/core/:path*"]
        }
      ]
    }
  }
}

